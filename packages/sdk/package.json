{
  "name": "@lightlist/sdk",
  "version": "1.0.0",
  "description": "Lightlist SDK for Web and Native",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest --config vitest.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:watch": "vitest --watch",
    "test:watch:unit": "vitest --config vitest.config.ts --watch",
    "test:watch:integration": "vitest --config vitest.integration.config.ts --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:unit": "vitest --config vitest.config.ts --coverage",
    "test:coverage:integration": "vitest --config vitest.integration.config.ts --coverage",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "yjs": "^13.6.27",
    "y-protocols": "^1.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}